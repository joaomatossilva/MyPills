@page
@model MyPills.Pages.Medicines.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="container my-5">
    <h2 class="mb-4">Medicine Details <a asp-page="./Edit" asp-route-id="@Model.Medicine.Id"><i class="fa-regular fa-pen-to-square"></i></a></h2>
    
    <dl class="row mb-5">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Medicine.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medicine.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Medicine.BoxSize)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medicine.BoxSize)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Medicine.StockQuantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medicine.StockQuantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Medicine.StockDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medicine.StockDate)
        </dd>
    </dl>

    <h2 class="mb-4">Latest Stocks</h2>
    
    <p>
        <a asp-page="/Stock/Create" asp-route-id="@Model.Medicine.Id" class="btn btn-success"><i class="fa-solid fa-plus"></i> <span>Add Stock Entry</span></a>
    </p>
    
    <table class="table table-striped">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StockEntry[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockEntry[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockEntry[0].Type)
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.StockEntry) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
            </tr>
        }
        </tbody>
    </table>
    
    <div class="mt-3">
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
