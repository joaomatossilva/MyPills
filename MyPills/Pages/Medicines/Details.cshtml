@page
@model MyPills.Pages.Medicines.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Medicine</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Medicine.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medicine.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Medicine.BoxSize)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medicine.BoxSize)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Medicine.StockQuantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medicine.StockQuantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Medicine.StockDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medicine.StockDate)
        </dd>
    </dl>
</div>

<div>
    <h4>Latest Stocks</h4>
    <hr />
    
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StockEntry[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockEntry[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockEntry[0].Type)
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.StockEntry) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
            </tr>
        }
        </tbody>
    </table>
    
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Medicine.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
