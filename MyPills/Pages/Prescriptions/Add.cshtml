@page
@model MyPills.Pages.Prescriptions.AddModel

        @{
        ViewData["Title"] = "Add Medicine to Prescription";
        }
        
        <h1>Create</h1>
        
    <h4>PrescribedMedicine</h4>
    <hr />
    <div class="row">
    <div class="col-md-4">
    <form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PrescribedMedicine.MedicineId" class="control-label"></label>
                <select asp-for="PrescribedMedicine.MedicineId" class ="form-control" asp-items="ViewBag.MedicineId" ></select>
            </div>
            <div class="form-group">
                <label asp-for="PrescribedMedicine.Quantity" class="control-label"></label>
                <input asp-for="PrescribedMedicine.Quantity" class="form-control" />
                <span asp-validation-for="PrescribedMedicine.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrescribedMedicine.ConsumedQuantity" class="control-label"></label>
                <input asp-for="PrescribedMedicine.ConsumedQuantity" class="form-control" />
                <span asp-validation-for="PrescribedMedicine.ConsumedQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Details" asp-route-id="@Model.PrescriptionId">Back to Prescription</a>
</div>

