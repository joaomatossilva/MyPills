@page
@model MyPills.Pages.Stock.DeductPrescription

@{
    ViewData["Title"] = "Prescription Deductions";
}
        
<div class="container my-5">
    <h2 class="mb-4">Prescription Deductions</h2>
            
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @for (var index = 0; index < Model.Prescriptions.Length; index++)
                {
                    <div class="form-floating mb-3">
                        <input class="form-control" type="number" asp-for="@Model.Prescriptions[index].Quantity" />
                        <label class="form-label">@Model.Prescriptions[index].Date (@Model.Prescriptions[index].Available Available)</label>
                        @Html.HiddenFor(m => m.Prescriptions[index].Id)
                    </div>
                }
                <div class="form-floating">
                    <input type="submit" value="Submit" class="w-100 btn btn-lg btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-page="/Overview" class="btn btn-secondary">Back to Overview</a>
    </div>
</div>

