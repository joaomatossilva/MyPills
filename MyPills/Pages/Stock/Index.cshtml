@page
@model MyPills.Pages.Stock.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container my-5">
    <h2 class="mb-4">Stock Entries</h2>

    <p>
        <a asp-page="Create" class="btn btn-success"><i class="fa-solid fa-plus"></i> <span>Add Stock Entry</span></a>
    </p>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StockEntry[0].Medicine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockEntry[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockEntry[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockEntry[0].Type)
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.StockEntry) {
            <tr>
                <td>
                    <a asp-page="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Medicine.Name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
